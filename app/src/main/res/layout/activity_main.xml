<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:background="@android:color/system_accent1_200"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView1"

        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-black"
        android:text="App data partger"
        android:textColor="#D54747"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/textView"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Nom et Prenom "
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="22dp" />


    <EditText
        android:id="@+id/nom"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#CEB4B4"
        android:ems="10"
        android:hint="Nom"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/textView2"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="20dp"
        android:text="Email" />

    <EditText
        android:textColor="#FFFFFF"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Email@email.com"
        android:inputType="textEmailAddress" />

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/textView3"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Phone" />

    <EditText
        android:textColor="#FFFFFF"
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="06 02 58 74 15"
        android:inputType="phone" />

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/ville"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="20dp"
        android:text="Ville" />

    <Spinner
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:entries="@array/villes"
        android:id="@+id/villes"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B43535"
        android:backgroundTintMode="add"
        android:text="envoyer" />




</LinearLayout>